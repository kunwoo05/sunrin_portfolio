#include <stdio.h>

int main(void)
{
	while (1) // 사용자가 종료하기 전까지 계속 실행되도록 하기 위해서 무한 루프
	{
        int sw = 0; // 사용자 메뉴 선택 입력 변수
        int n1 = 1; // 삼각형의 크기를 입력하는 변수
        int i1 = 0, i2 = 0, i3 = 0; // 반복문에서 사용될 변수
        int y, y1;  // 임시로 반복문에서 사용될 변수
        int v, v1;  // 임시로 반복문에서 사용될 변수

		// 사용자 보기 화면
		printf("\n======== 세미 프로젝트 =========\n");
		printf("1. 왼쪽 직각 삼각형\n");
		printf("2. 왼쪽 역 직각 삼각형\n");
		printf("3. 오른쪽 직각 삼각형\n");
		printf("4. 오른쪽 역 직각 삼각형\n");
		printf("5. 정 삼각형\n");
		printf("6. 역삼각형\n");
		printf("7. 모래시계\n");
		printf("8. 종료\n");
		printf("==============================\n");
		printf("원하는 메뉴를 입력해 주세요. >> ");
		scanf("%d", &sw);
		// 사용자가 선택한 것에 따라서 실행될 것들
		switch (sw){
            case 1:
                printf("   왼쪽 직각 삼각형   \n\n");
                while(n1 != 0){                     // 사용자가 0번을 누를때까지 반복합니다
                    printf("숫자를 입력하시오 : ");
                    scanf("%d", &n1);
                    while (n1 > i1){                // 세로를 담당하는 반복문, 사용자가 입력한 높이만큼 반복합니다
                        while (i1 >= i2){           // 가로를 담당하는 반복문입니다
                            printf("*");            
                            i2++;                   // 다음 행으로 넘어가기위해 1씩 증가시켜야 합니다
                        }
                        i2 = 0;                     // 새로운 가로 값을 위해서 초기화 해야합니다
                        printf("\n");               // 개행을 주어서 행을 변경합니다
                        i1++;                       // 다음 반복을 위해서 초기화 합니다
                    }
                    i2 = 0;                         // 다음 반복을 위해서 초기화 합니다
                    i1 = 0;                         // 다음 반복을 위해서 초기화 합니다
                }
                break;

		    case 2:
                while (n1 != 0){                    // 사용자가 0번을 누를때까지 반복합니다
                    printf("2. 왼쪽 역 직각 삼각형\n"); 
                    printf("숫자를 입력하시오 : ");
                    scanf("%d", &n1);
                    while (n1 > i1){                // 세로를 담당하는 반복문, 사용자가 입력한 높이만큼 반복합니다
                        while (n1 > i2){            // 가로를 담당하는 반복문입니다. i2가 커질 수록 반복의 횟수가 줄어듭니다
                            printf("*");
                            i2++;
                        }
                        printf("\n");
                        i1++;                       // 다음 행의 값을 줄이기 위해서 i1을 1 증가시킵니다
                        i2 = i1;                    // i2에 i1을 넣어 i2를 1씩 늘려서 가로 반복문의 횟수 줄여줍니다
                    }
                    i2 = 0;
                    i1 = 0;                         // 다음 반복문을 위해서 초기화 합니다
                }
                break;
        
            case 3:
                while (n1 != 0)                     // 사용자가 0번을 누를때까지 반복합니다
                {
                    printf("3. 오른쪽 직각 삼각형\n");
                    printf("숫자를 입력하시오 : ");
                    scanf("%d", &n1);
                    while (n1 > i1){                // 세로를 담당하는 반복문, 사용자가 입력한 높이만큼 반복합니다
                        while (n1 > i3){            // 오른쪽에 공백으로된 역삼각형을 만든다고 생각하고 반복해 줍니다
                            printf(" ");            // i3 변수를 1씩 증가시켜서 공백의 횟수를 점점 줄여나갈 것입니다
                            i3++;                   // 이 부분은 공백의 횟수를 늘리는게 아니라 반복문을 끝내기 위해서 1씩 증가시킵니다
                        }
                        while (i1 >= i2){           // 공백을 출력한 후에 별을 만들어 주기 위해서 반복합니다
                            printf("*");
                            i2++;
                        }
                        printf("\n");
                        i3 = i2;                    // 이 부분에서 i3 변수에 i2 값을 넣어 1씩 증가시킵니다
                        i2 = 0;                     // 이후에는 다음 반복문을 위해서 i2를 초기화 합니다
                        i1++;                       // 다음 행을 위해서 1을 증가시킵니다
                    }
                    i1 = 0;                         // 다음 반복을 위해서 초기화 합니다
                    i2 = 0;
                    i3 = 0;
                }
                break;
    
            case 4:
                while (n1 != 0){                        // 사용자가 0번을 누를때까지 반복합니다
                    printf("4. 오른쪽 역 직각 삼각형\n"); 
                    printf("숫자를 입력하시오 : ");
                    scanf("%d", &n1);
                    // i1: 세로 값 관련 변수, i2: 공백 값을 반복시키기 위한 변수, i3: 별 모양을 반복시키기 위한 변수
                    while (n1 > i1){                    // 세로를 담당하는 반복문, 사용자가 입력한 높이만큼 반복합니다
                        // 아래 반복문은 공백을 출력하기 위한 반복문 입니다
                        while (i1 > i2){                // i2는 초기 값이 0이기 때문에 처음에는 아무것도 출력하지 않습니다         
                            printf(" ");
                            i2++;                       // 여기서 i2를 1씩 증가시키면서 공백의 갯수를 늘려갑니다
                        }
                        // 아래 반복문은 역삼각형을 만들기 위한 반복문 입니다
                        while (n1 > i3){                // 가장 첫줄이 높이만큼 출력하기 때문에 높이만큼 반복합니다
                             printf("*");               // i3의 초기 값이 0이기 때문에 처음에는 높이만큼 반복하지만 이후 1씩 증가된 값을 넣습니다
                             i3++;                      // 이 부분은 반복문을 끝내기 위한 곳 입니다
                        }
                        i1++;                           // i1을 1씩 증가시켜서 다음 행의 값을 줄입니다
                        i3 = i1;                        // i3에 i1을 넣으면서 역삼각형을 만들때 1개씩 감소된 갯수만큼 출력합니다
                        i2 = 0;                         // 다음 반복문을 위해서 초기화 합니다
                        printf("\n");
                    }
                    i3 = 0;                             // 다음 반복문을 위해서 초기화 합니다
                    i2 = 0;
                    i1 = 0;
                }
                break;
    
		    case 5:
                while (n1 != 0)                     // 사용자가 0번을 누를때까지 반복합니다
                {
                    printf("5. 정 삼각형\n");
                    printf("숫자를 입력하시오 : ");
                    scanf("%d", &n1);
                    // i1: 세로 값 관련 변수, i2: 별 모양을 반복 시키기 위한 변수, i3: 공백 값을 반복 시키기 위한 변수
                    y = n1/2;                // 공백의 수를 정해줍니다 입력받은 수의 절반으로 나누면 더 정교한 삼각형이 만들어집니다
                    while (n1 > i1){
                        // 아래 반복문은 공백을 출력하기 위한 반복문 입니다
                        while (y > i3){
                            printf(" ");
                            i3++;             // 이 부분은 반복문을 끝내기 위해 증가시킵니다
                        }
                        // 아래 반복문은 삼각형을 만들기 위한 반복문 입니다
                        while (i1 >= i2){
                            printf("*");
                            i2++;
                        }
                        y--;                  // y에 1을 빼주면서 공백의 수를 줄여줍니다
                        i3 = 0;
                        i2 = 0;
                        i1 += 2;              // 여기서 2를 더해주는 이유는 별의 갯수가 아래로 갈수록 2개씩 증가하기 때문입니다
                        printf("\n");
                    }
                    i3 = 0;                   // 다음 반복문을 위해서 초기화 합니다
                    i2 = 0;
                    i1 = 0;
                }
			    break;
        
		    case 6:
                while (n1 != 0)
                {
                    printf("숫자를 입력하시오 : ");
                    scanf("%d", &n1);
                    // i1: 세로 값 관련 변수, i2: 별 모양을 반복시키기 위한 변수, i3: 공백 값을 반복시키기 위한 변수
                    y1 = n1;                // 높이와 역삼각형에서 가장 윗 행을 위한 변수
                    y = 0;                  // 공백 길이를 위한 변수, 첫 행에는 공백이 없기 때문에 0으로 설정하고 다음 코드에서 1씩 증가시켜 공백을 늘립니다
                    while (y1 >= 1){        // 별의 최소 개수가 1개이기 때문에 이러한 조건으로 함
                        // 아래 반복문은 공백을 출력하기 위한 반복문 입니다
                        while (i3 < y){
                            printf(" ");
                            i3++;
                        }
                        // 아래 반복문은 역삼각형을 만들기 위한 반복문 입니다
                        while (i2 < y1){ 
                            printf("*");
                            i2++;
                        }
                        y++;                // 공백을 늘리기 위해서 y의 값을 증가시킵니다
                        i2 = 0;
                        i3 = 0;
                        y1 -= 2;            // 아래로 내려갈수록 별의 갯수가 2개식 줄어들기 때문에
                        printf("\n");                        
                    }
                    i2 = 0;
                    i1 = 0;
                }
                break;

		case 7:

			while (n1 != 0)                     // 사용자가 0번을 누를때까지 반복합니다
			{
				printf("숫자를 입력하시오 : ");
				scanf("%d", &n1);
                // i1: 세로 값 관련 변수, i2: 별 모양을 반복시키기 위한 변수, i3: 공백 값을 반복시키기 위한 변수
				v = n1;
				//y = n1 / 2 + 1;
                // 모래시계는 역정삼각형과 정삼각형이 합쳐진 형태이기 때문에 2개의 반복문을 사용합니다
                // 역정삼각형 반복문
                y1 = n1;                // 높이와 역삼각형에서 가장 윗 행을 위한 변수
                y = 0;                  // 공백 길이를 위한 변수, 첫 행에는 공백이 없기 때문에 0으로 설정하고 다음 코드에서 1씩 증가시켜 공백을 늘립니다
                while (y1 >= 1){        // 별의 최소 개수가 1개이기 때문에 이러한 조건으로 함
                    // 아래 반복문은 공백을 출력하기 위한 반복문 입니다
                    while (i3 < y){
                        printf(" ");
                        i3++;
                    }
                    // 아래 반복문은 역삼각형을 만들기 위한 반복문 입니다
                    while (i2 < y1){ 
                        printf("*");
                        i2++;
                    }
                    y++;                // 공백을 늘리기 위해서 y의 값을 증가시킵니다
                    i2 = 0;
                    i3 = 0;
                    y1 -= 2;            // 아래로 내려갈수록 별의 갯수가 2개식 줄어들기 때문에
                    printf("\n");                        
                }
                i2 = 0;
                i1 = 0;
            
                // 일반 정삼각형 반복문
                y = n1/2;                // 공백의 수를 정해줍니다 입력받은 수의 절반으로 나누면 더 정교한 삼각형이 만들어집니다
                while (n1 > i1){
                    // 아래 반복문은 공백을 출력하기 위한 반복문 입니다
                    while (y > i3){
                        printf(" ");
                        i3++;             // 이 부분은 반복문을 끝내기 위해 증가시킵니다
                    }
                    // 아래 반복문은 삼각형을 만들기 위한 반복문 입니다
                    while (i1 >= i2){
                        printf("*");
                        i2++;
                    }
                    y--;                  // y에 1을 빼주면서 공백의 수를 줄여줍니다
                    i3 = 0;
                    i2 = 0;
                    i1 += 2;              // 여기서 2를 더해주는 이유는 별의 갯수가 아래로 갈수록 2개씩 증가하기 때문입니다
                    printf("\n");
                }
                i3 = 0;                   // 다음 반복문을 위해서 초기화 합니다
                i2 = 0;
                i1 = 0;
            }
			break;

        case 8:
			printf("사용자 요청에 의해서 프로그램을 종료합니다. ");
			//exit(0);

			break;

		default: //예외처리
			printf("\n\n입력범위(1~9)를  벗어났습니다. 다시 입력해주세요.\n\n");
			//exit(0);
			break;
		}
	}
}
